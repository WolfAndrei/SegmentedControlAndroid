<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.NewApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Widget.App.Button" parent="Widget.Material3.Button">
    <item name="android:letterSpacing">0</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Button</item>
  </style>
  <style name="Widget.App.Button.TextButton">
    <item name="android:padding">0dp</item>
    <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Widget</item>
  </style>
  <style name="ShapeAppearance.App.Button" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">5dp</item>
  </style>
  <style name="ShapeAppearance.App.Button.Rounded">
    <item name="cornerSize">50%</item>
  </style>
  <!--Outlined Button Style-->
  <style name="Widget.App.Button.TextButton.Outlined">
    <item name="strokeWidth">1.5dp</item>
    <item name="strokeColor">@color/stroke_color</item>
    <item name="android:backgroundTint">@color/background_color</item>
    <item name="android:textColor">@color/text_color</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:stateListAnimator">@null</item>
    <!--  Material workaround-->
    <item name="materialThemeOverlay">@style/button_overlay</item>
    <item name="theme">@style/SelectorTheme</item>
  </style>

  <!--  Material workaround-->
  <style name="button_overlay" >
    <item name="colorSurface">@android:color/white</item>
  </style>
  <style name="SelectorTheme" parent="@style/Theme.MaterialComponents"/>

</resources>